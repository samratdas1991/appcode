    <typedValue>
        <type>
            <name>RuleTestConfig?list</name>
            <namespace>http://www.appian.com/ae/types/2009</namespace>
        </type>
        <value>
            <el>
                <a:name>Null Input</a:name>
                <a:ruleInputTestConfigs>
                    <a:value xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:nil="true" xsi:type="xsd:dateTime"/>
                    <a:nameRef>dateTime</a:nameRef>
                    <a:id>1</a:id>
                </a:ruleInputTestConfigs>
                <a:assertions>
                    <a:expectedOutput>
                        <a:type a:uuid="{http://www.appian.com/ae/types/2009}Text"/>
                        <a:runtimeType a:uuid="{http://www.appian.com/ae/types/2009}Text"/>
                        <a:value xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="xsd:string"/>
                    </a:expectedOutput>
                </a:assertions>
            </el>
            <el>
                <a:name>DateTime that crosses over midnight</a:name>
                <a:ruleInputTestConfigs>
                    <a:value xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="a:Expression">datetime(2011, 2, 28, 1, 0, 0)</a:value>
                    <a:nameRef>dateTime</a:nameRef>
                    <a:id>1</a:id>
                </a:ruleInputTestConfigs>
                <a:assertions>
                    <a:expectedOutput xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:nil="true"/>
                    <a:resultAssertions>test!output = 
if(
  and(
    userlocale(loggedInUser()) = "en_US",
    usertimezone(loggedInUser()) = "America/New_York"
  ),
  "Feb 27, 2011 8:00 PM",
  if(
    userlocale(loggedInUser()) = "en_US",
    text(ri!dateTime, "mmm d, yyyy h:mm a"),
    text(ri!dateTime, "d mmm yyyy hh:mm")
  )
)</a:resultAssertions>
                </a:assertions>
            </el>
            <el>
                <a:name>Copy of DateTime that doesn't cross over midnight</a:name>
                <a:ruleInputTestConfigs>
                    <a:value xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="a:Expression">datetime(2011, 2, 28, 11, 0, 0)</a:value>
                    <a:nameRef>dateTime</a:nameRef>
                    <a:id>1</a:id>
                </a:ruleInputTestConfigs>
                <a:assertions>
                    <a:expectedOutput xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:nil="true"/>
                    <a:resultAssertions>test!output = 
if(
  and(
    userlocale(loggedInUser()) = "en_US",
    usertimezone(loggedInUser()) = "America/New_York"
  ),
  "Feb 28, 2011 6:00 AM",
  if(
    userlocale(loggedInUser()) = "en_US",
    text(ri!dateTime, "mmm d, yyyy h:mm a"),
    text(ri!dateTime, "d mmm yyyy hh:mm")
  )
)</a:resultAssertions>
                </a:assertions>
            </el>
        </value>
