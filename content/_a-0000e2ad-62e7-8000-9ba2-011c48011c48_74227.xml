<contentHaul xmlns:a="http://www.appian.com/ae/types/2009">
    <versionUuid>_a-0000e447-933d-8000-9baa-011c48011c48_33535</versionUuid>
    <rule>
        <name>AS_CO_UT_formatDateTime</name>
        <uuid>_a-0000e2ad-62e7-8000-9ba2-011c48011c48_74227</uuid>
        <description>Formats a date time for read-only text display using the loggedInUser's timezone. Note, do not use this rule to format dates, only date times. Returns text.</description>
        <parentUuid>_a-0000e2ad-62e7-8000-9ba2-011c48011c48_73105</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>cast(
   'type!{http://www.appian.com/ae/types/2009}Text',
  if(
    #"_a-0000e2ad-62e7-8000-9ba2-011c48011c48_73536"(ri!dateTime), 
    "",
    if(
      #"_a-0000e447-933d-8000-9baa-011c48011c48_31790"(user: loggedInUser()),
      text(ri!dateTime, "mmm d, yyyy h:mm a"),
      text(ri!dateTime, "d mmm yyyy hh:mm")
    )
  )
)</definition>
        <namedTypedValue>
            <name>dateTime</name>
            <type>
                <name>dateTime</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
        </namedTypedValue>
        <preferredEditor>legacy</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
