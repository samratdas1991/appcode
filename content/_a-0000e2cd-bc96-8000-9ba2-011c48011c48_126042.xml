    <rule>
        <name>AS_CO_UT_formatCurrencyValue</name>
        <uuid>_a-0000e2cd-bc96-8000-9ba2-011c48011c48_126042</uuid>
        <description>takes in a currency code and a dollar value and returns a formatted value</description>
        <parentUuid>_a-0000e2ad-62e7-8000-9ba2-011c48011c48_73105</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>a!localVariables(
  local!userLocale: #"_a-0000e2ad-62e7-8000-9ba2-011c48011c48_76004"(user: loggedInUser()),
  cast(
    'type!{http://www.appian.com/ae/types/2009}Text',
    if(
      #"_a-0000e2ad-62e7-8000-9ba2-011c48011c48_73536"(ri!currencyValue),
      "",
      with(
        local!allCurrencies: #"_a-0000e35d-b03e-8000-9ba2-011c48011c48_40701"(),
        local!currencyCode: #"_a-0000e2ad-62e7-8000-9ba2-011c48011c48_73980"(
          nullableValue: ri!currencyCode,
          replacementValue: #"_a-0000e35d-b03e-8000-9ba2-011c48011c48_40657"
        ),
        local!symbol: displayvalue(
          local!currencyCode,
          local!allCurrencies.currencyCode,
          local!allCurrencies.symbol,
          null
        ),
        local!currencyDisplay: if(
          local!userLocale = "en_GB",
          concat(
            substitute(
              text(
                ri!currencyValue,
                "#,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###"
              ),
              ",",
              "."
            ),
            if(
              ri!showDecimal,
              {
                ",",
                right(
                  text(
                    ri!currencyValue,
                    "#,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###.00"
                  ),
                  2
                )
              },
              {}
            )
          ),
          text(
            ri!currencyValue,
            if(
              ri!showDecimal,
              "#,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###.00",
              "#,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###,###"
            )
          )
        ),
        concat(
          local!symbol,
          local!currencyDisplay,
          if(
            ri!showCurrencyCode,
            concat(" ", local!currencyCode),
            ""
          )
        )
      )
    )
  )
)</definition>
