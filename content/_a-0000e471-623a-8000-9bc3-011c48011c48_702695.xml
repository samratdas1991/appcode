    <rule>
        <name>AS_CO_I18N_UT_replaceArgument_RichText_InsertArgumentCdt</name>
        <uuid>_a-0000e471-623a-8000-9bc3-011c48011c48_702695</uuid>
        <description>Inserts the given argument as a richTextItem where applicable for the provided text type</description>
        <parentUuid>_a-0000e2ad-62e7-8000-9ba2-011c48011c48_73105</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>if(
  #"_a-0000e3e6-fb42-8000-9ba5-011c48011c48_162769"(value1: ri!item, value2: ""),
  with(
    local!splitText: cast(
      #"_a-0000e40a-de32-8000-9ba8-011c48011c48_283420"(),
      split(ri!item, concat("[%", ri!index, "]"))
    ),
    if(
      count(local!splitText) &lt; 2,
      local!splitText,
      insert(
        local!splitText,
        a!flatten(ri!richTextArguments)[ri!index],
        enumerate(length(local!splitText) - 1) + 2
      )
    )
  ),
  /* Replacing arguments inside the text of a richTextTtem is not supported by this rule */
  ri!item
)</definition>
        <namedTypedValue>
            <name>item</name>
            <type>
                <name>Variant</name>
                <namespace>http://www.appian.com/ae/types/2009</namespace>
            </type>
        </namedTypedValue>
        <namedTypedValue>
            <name>index</name>
            <type>
                <name>int</name>
