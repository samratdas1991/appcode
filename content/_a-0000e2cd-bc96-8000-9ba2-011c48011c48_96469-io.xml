    <rule>
        <name>AS_IO_RC_commentSaves</name>
        <uuid>_a-0000e2cd-bc96-8000-9ba2-011c48011c48_96469-io</uuid>
        <description>Logic for saving a comment</description>
        <parentUuid>_a-0000e2bb-4188-8000-9ba2-011c48011c48_25469</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>{
  if(
    ri!isUpdate,
    { a!save(ri!comment, ri!comment) },
    {
      a!save(ri!comment.commentType, ri!commentType),
      #"_a-0000e539-6d59-8000-9bd0-011c48011c48_1234677"()
    }
  ),
  a!save(
    ri!comment.sentiment,
    if(
      ri!enableSentiment,
      #"_a-0000e2cd-bc96-8000-9ba2-011c48011c48_76313-io"(text: ri!comment.comment),
      null
    )
  ),
  a!save(ri!comment.isDeleted, ri!isDeleted),
  #"SYSTEM_SYSRULES_startProcess"(
    processModel: #"_a-0000e2cd-bc96-8000-9ba2-011c48011c48_76385-io",
    processParameters: {
      comment: ri!comment,
      recordLink: ri!recordLink,
      recipients: ri!recipients,
      enableEmail: ri!enableEmail,
      recordName: ri!recordName
    },
    onSuccess: {
      a!save(ri!isUpdate, false),
      a!save(
        ri!comment,
        #"_a-0000e2cd-bc96-8000-9ba2-011c48011c48_96488-io"(
          recordId: ri!recordId,
          recordTypeId: ri!recordTypeId
        )
      ),
      a!save(
        ri!comments,
        #"_a-0000e2cd-bc96-8000-9ba2-011c48011c48_76299-io"(
          recordTypeId: ri!recordTypeId,
          recordId: ri!recordId,
          triggerRefresh: now(),
          returnType: #"_a-0000e415-3035-8000-9bb2-011c48011c48_290163"
        )
      )
    }
  )
}</definition>
